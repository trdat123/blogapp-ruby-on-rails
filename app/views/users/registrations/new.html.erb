<div class="home-page">
    <div class="d-flex flex-row">
        <div class="d-flex flex-column mr-5 mt-5">
            <h1 class="display-3 fw-bold" id="app-title">Blog App</h1>
            <p class="fs-3">Blog App helps you connect and share with the people in your life.</p>
        </div>

        <div class="card text-center" id="signin-card">
            <div class="card-body">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "users/shared/error_messages", resource: resource %>
                    <div class="form-group">
                        <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"form-control bg-light mb-2", placeholder:"Your username" %>
                    </div>
                    
                    <div class="form-group">
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control bg-light mb-2", placeholder:"E-mail" %>
                    </div>

                    <div class="form-group">
                        <% if @minimum_password_length %>
                            <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %> 
                        <%= f.password_field :password, autocomplete: "new-password", class:"form-control bg-light mb-2", placeholder:"New password" %>
                    </div>

                    <div class="form-group">
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control bg-light mb-2", placeholder:"Retype new password" %>
                    </div>                 
                    <p id="policy">By clicking Sign Up, you agree to our Terms, Data Policy and Cookie Policy.</p>

                    <%= f.submit "Sign Up", class:"btn btn-success btn-lg mx-auto" %>
                <% end %>
            </div>

            <div class="card-footer">
                <%= link_to "Sign in", new_user_session_path, class:"btn btn-primary" %>
            </div>
        </div>
    </div>    
</div>
